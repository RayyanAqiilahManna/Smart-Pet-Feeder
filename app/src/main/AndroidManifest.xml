<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.petfeeder"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ Needed for notifications on Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <!-- ✅ Internet for backend API calls -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- ✅ Required for setExactAndAllowWhileIdle() on Android 12+ -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetFeeder"
        tools:targetApi="31">

        <!-- ✅ Mark this app as an “alarm” type app for Android 12+ -->
        <meta-data
            android:name="android.app.alarm.permission.SCHEDULE_EXACT_ALARM"
            android:value="true" />

        <!-- BroadcastReceiver for schedule alarms -->
        <receiver android:name=".notifications.ScheduleReceiver" />

        <!-- Settings screen -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false" />

        <!-- Splash screen (entry point) -->
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login screen -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <!-- Main screen -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name" />

    </application>
</manifest>
