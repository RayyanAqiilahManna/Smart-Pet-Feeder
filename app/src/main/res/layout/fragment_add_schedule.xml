<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvAddSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Jadwal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- Time Picker (for now, just a placeholder) -->
        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginBottom="24dp" />

        <!-- Portion Input -->
        <EditText
            android:id="@+id/etPortion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Porsi (gram)"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/bg_cat_item"
            android:layout_marginBottom="24dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4285F4"
            android:fontFamily="@font/poppins_regular"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>