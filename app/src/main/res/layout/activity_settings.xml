<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvSettingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengaturan"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="72dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Username -->
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NamaUser"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#000000"
            android:layout_marginBottom="32dp" />

        <!-- Wi-Fi Button -->
        <ImageButton
            android:id="@+id/btnWifi"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/rounded_white_button"
            android:src="@drawable/wifi_svg"
            android:contentDescription="@string/wifi"
            android:scaleType="centerInside"
            android:layout_marginBottom="16dp" />

        <!-- Profile Button -->
        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/rounded_white_button"
            android:src="@drawable/profile_change"
            android:contentDescription="@string/profile"
            android:scaleType="centerInside"
            android:layout_marginBottom="16dp" />

        <!-- Theme Button -->
        <ImageButton
            android:id="@+id/btnTheme"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/rounded_white_button"
            android:src="@drawable/brightness_svg"
            android:contentDescription="@string/theme"
            android:scaleType="centerInside"
            android:layout_marginBottom="36dp" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="#D3D3D3"
            android:textColor="#A00000"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</ScrollView>
